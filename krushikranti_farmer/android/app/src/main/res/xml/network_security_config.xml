<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow cleartext (HTTP) traffic for local development -->
    <!-- WARNING: Only use this for development. Remove or restrict in production! -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
    
    <!-- Optionally, you can restrict cleartext to specific domains -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
        <domain includeSubdomains="true">192.168.1.39</domain>
        <domain includeSubdomains="true">192.168.1.42</domain>
        <domain includeSubdomains="true">192.168.1.45</domain>
        <domain includeSubdomains="true">192.168.1.48</domain>
        <domain includeSubdomains="true">192.168.1.53</domain>
        <domain includeSubdomains="true">192.168.1.109</domain>
        <domain includeSubdomains="true">192.168.1.44</domain> 
        <domain includeSubdomains="true">192.168.1.38</domain> 
        <domain includeSubdomains="true">10.0.2.2</domain>
    </domain-config>
</network-security-config>

